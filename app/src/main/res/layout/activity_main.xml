<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <EditText
            android:id="@+id/UrlET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Url" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:onClick="OnClickSync"
            android:padding="10dp"
            android:text="Sync"
            android:textColor="#ffffff" />
    </LinearLayout>
    <!--  <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <WebView
              android:id="@+id/aliToBdWV"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

          </WebView>
      </LinearLayout>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/TitleTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
<ImageView
    android:visibility="invisible"
    android:id="@+id/ImageIV"
    android:layout_gravity="center"
    android:layout_width="200dp"
    android:layout_height="150dp" />
        <TextView
            android:id="@+id/PriceTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/DiscountPriceTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/DiscountRateTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/TotalOrderTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/ShippingChargeTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/ProductSizeTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.RecyclerView
            android:orientation="horizontal"
            android:id="@+id/SizeRV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>



</LinearLayout>